using System;

namespace ConsoleApp3
{
    class Program
    {
        static void Main(string[] args)
        {
            String Sanfrancisco = "Alcatraz";
            Console.WriteLine("Visiting palce is {0} in San francisco", Sanfrancisco);

            String Hair = "black";
            Console.WriteLine("Color of hair is {0}", Hair);
            String fingure = "Straight";
            Console.WriteLine("Types of fingure is {0}", fingure);

            decimal Salary = 5500;
            decimal monthlyExpenses = 3000;
            decimal totalSaving = Salary - monthlyExpenses;

            Console.WriteLine(" Total Saving is {0:C}", totalSaving);


            Console.WriteLine("******************Int ***********************");

            double students = 320, section = 9;
            double eachSection = students % section;
            Console.WriteLine("Total Students,total section & in each class is and reminder is {0}", eachSection);

            Console.WriteLine("**************String convert into numeric values**********");

            Console.WriteLine("Enter the values");
            var input = Console.ReadLine();
            var x = int.Parse(input);
            Console.WriteLine("input value " + x + "increased by 10% is" + x * 1.1);


            
        }
    }
}
